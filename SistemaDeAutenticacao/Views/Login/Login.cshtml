@model SistemaDeAutenticacao.Models.LoginViewModel

<div class="col-12">

        <div  class="row">
            <h3>
                Login
            </h3>
        </div>
        <div class="row">
            <form asp-action="Login" asp-controller="Login" method="post">
                <div>
                    <div>
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" class="form-control" type="email" placeholder="insira o e-mail" />
                     </div>
                    <div>
                        <label asp-for="@Model.Senha"></label>
                        <input asp-for="@Model.Senha" class="form-control" type="password" placeholder="insira a senha"/>
                    </div>
                    <div>
                        <button type="submit" class="form-control">Cadastrar</button>
                    </div>
                 </div>
            </form>
        </div>

</div>
